<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageViewWithBorder">
        <attr name="borderColour" format="color" />
        <attr name="borderPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ImageViewWithName">
        <attr name="textColour" format="color" />
        <attr name="textBackgroundColour" format="color" />
        <attr name="imageText" format="string" />
    </declare-styleable>
    <declare-styleable name="ImageViewWithDynamicName">
        <attr name="textImgColour" format="color" />
        <attr name="textImgBackgroundColour" format="color" />
        <attr name="imageImgText" format="string" />
    </declare-styleable>
</resources>